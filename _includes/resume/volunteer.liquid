<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign volunteer = data[1] | sort: 'startDate' | reverse %}
  {% for content in volunteer %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-12">
          <div class="d-flex justify-content-between align-items-center">
            <h6 class="title font-weight-bold">
              <a href="{{ content.url }}">{{ content.position }}</a>
            </h6>
            {% if content.startDate %}
              {% assign startDate = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
              {% assign endDate = content.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
              {% assign date = startDate | append: ' - ' %}
              {% assign date = date | append: endDate %}
              <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle text-center" style="min-width: 75px"> {{ date }} </span>
            {% endif %}
          </div>
          <h6 style="font-size: 0.95rem">{{ content.organization }}</h6>
          <h6 style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
          <ul class="items">
            {% for item in content.highlights %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
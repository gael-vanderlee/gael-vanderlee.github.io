<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign work = data[1] | sort: 'startDate' | reverse %}
  {% for content in work %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-12 date-column">
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex w-100">
              <h6 class="title font-weight-bold">
                <a href="{{ content.url }}">{{ content.position }}</a>
              </h6>
            </div>
            {% if content.startDate %}
              {% assign startDate = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
              {% assign endDate = content.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
              {% assign date = startDate | append: ' - ' %}
              {% assign date = date | append: endDate %}
              <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle text-center" style="white-space: nowrap"> {{ date }} </span>
            {% endif %}
          </div>
          <div class="d-flex align-items-start">
            <h6 style="font-size: 0.95rem">{{ content.name }}</h6>
            {% if content.location %}
              <p class="location ml-2">
                <i class="fa-solid fa-location-dot iconlocation"></i>
                {{ content.location }}
              </p>
            {% endif %}
          </div>
          <h6 style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
          <ul class="items">
            {% for item in content.highlights %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>